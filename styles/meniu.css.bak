#middle{
    display: flex;
    flex-direction: column;
    background-color: #f4f4f4;   
}

#meniu-little{
    margin-top: 1%;
    background-color: white;
    margin-left: 2%;
    margin-right: 2%;
    padding: 25px;
    padding-bottom: 3px;
    box-shadow: 0 3px 5px 0 rgb(0 0 0 / 11%);
}

#meniu-little h1{
    font-size: 22px;
}

#meniu-nav{
    border-top: 1px solid #ccc;
}

#meniu-nav ul{
    display: flex;
    flex-direction: row;
    margin-left: -3.6%;
}

#meniu-nav ul li a{
    padding: 15px 12px;
    font-weight: 700;
}

#meniu-nav ul li a:hover { 
    padding: 5px 10px;
	background: #333;
	text-decoration: none;
    list-style-type: none;
    color: #fff;
    transition: 100ms;
}

#items{
    margin-left: 2%;
    margin-right: 2%;
    padding-bottom: 3px;
    margin-bottom: 1%;
}

#items h2{
    font-size: 18px;
    border-left: 3px solid black;
    padding-left: 25px;
}

.item-list{
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    margin-left: 50px;
    margin-right: 50px;
}

.item{
    width: 40%;
    box-shadow: 0 3px 5px 0 rgb(0 0 0 / 11%);
    margin-bottom: 20px;
}

.item a{
    display: flex;
    flex-direction: row;
    background-color: white;
    padding-bottom: 10px;
}

.item-img{
    width: 90px;
    height: 100%;
    margin-left: 5px;
    margin-top: 5px;
}

.item-text{
    height: 90px;
    overflow: hidden;
    padding: 5px;
    padding-right: 10px;
    padding-left: 10px;
    line-height: 20px;
    color: rgb(94, 92, 92);
}

.item-text p{
    font-weight: 700;
    margin-bottom: 10px;
    color: black;
}

/* 
    media
*/

@media screen and (max-width: 1350px){

    .item-list{
        margin-left: 0%;
        margin-right: 0%;
    }
}

@media screen and (max-width: 1100px){

    .item-list{
        justify-content: space-between;
    }

    .item{
        width: 45%;
    }
}

@media screen and (max-width: 850px){

    .item-list{
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .item{
        width: 80%;
    }
}

@media screen and (max-width: 720px){

    .item{
        width: 100%;
    }
}